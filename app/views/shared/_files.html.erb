<% if @files.any? %>
  <ol class="userfiles">
    <% @files.each do |file|  %>
      <div class="row">
        <div class="col-4">
          <div class="d-inline-block">
            <h4><%=file.name%></h4>
          </div>
        </div>
        <div class="col-2">
          <div class="d-inline-block">
            <%= link_to "Download" , download_file_path(id: file.id)%>
          </div>
        </div>
        <div class="col-2">
          <%= link_to "Delete" , user_file_path(id: file.id) , method: :delete %>
        </div>
        <div class="col-2">
          <%= link_to "Share" , shared_file_path(id:file.id) , method: :post%>
        </div>
        <%if sharing_enabled?(file.id)%>
          <div class="col-2">
            <%= link_to "Make Private" , unshared_file_path(id:file.id) , method: :delete%>
          </div>
        <%end%>
      </div>
      <br>
    <%end%>
  </ol>
  <%# <%= will_paginate @feed_items,
params: { controller: :static_pages, action: :home } %>
<% end %>
